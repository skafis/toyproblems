
public class LargestContinousSum {
	public static void main (String[] args){
	int[]hold = new int []{8,3,-6,-1};
	int sum=0;
	int sum2 =0;
	for (int i=0; i<hold.length; i++){
		if (hold[i] > 0){
			sum = sum + hold[i];
			System.out.println(sum);
		}
		else
			sum2 = sum2+hold[i];
			System.out.println(sum2);
	}
		
	}
}
